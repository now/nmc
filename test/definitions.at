AT_SETUP([Document consisting of a title followed by a three-item definition])

AT_DATA([title],
[[Title

= A. =   1
= B. =   2
= C. =   3
]])

AT_NMC_CHECK([title],
[[  <title>Title</title>
  <definitions>
    <item>
      <term>A</term>
      <definition>
        <p>1</p>
      </definition>
    </item>
    <item>
      <term>B</term>
      <definition>
        <p>2</p>
      </definition>
    </item>
    <item>
      <term>C</term>
      <definition>
        <p>3</p>
      </definition>
    </item>
  </definitions>]])

AT_CLEANUP

